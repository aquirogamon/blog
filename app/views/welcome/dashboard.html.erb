<% @articles.each do |article| %>
	<h1 class="field"><%= link_to article.title, article %></h1>
	<div>
		<%= article.body.html_safe %>
	</div>
	<div class="field">
		<%= link_to "Eliminar", article, method: :delete , class:"be-blue white btn_litle"%>
		<% if article.may_publish? %>
			<%= link_to "Publicar", "/articles/#{article.id}/publish", method: :put , class:"be-blue white btn_litle"%>
		<%end%>
	</div>
<%end%>